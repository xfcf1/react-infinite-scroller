{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "libs",
    "sourceMap": false,
    "target": "es5",
    "module": "CommonJS",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "paths": {}
  },
  "exclude": ["node_modules", "libs"]
}
